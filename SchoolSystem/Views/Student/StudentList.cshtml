@model List<SchoolSystem.Models.Student>
@{
    ViewBag.Title = "StudentList";
}

<table class="table table-striped table-dark">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Father Name</th>
        <th scope="col">Email</th>
        <th scope="col">Mobile No</th>
        <th scope="col">Description</th>
        <th scope="col">Action</th>
    </tr>

    @foreach (var item in Model)
        {
            <tr>
                <th>@item.Name</th>
                <td>@item.FatherName</td>
                <td>@item.Email</td>
                <td>@item.MobileNo</td>
                <td>@item.Description</td>
                <td>
                <a href="@Url.Action("Student",new {item.ID,item.Name,item.FatherName,item.Email,item.MobileNo,item.Description})" class="btn btn-success">Edit</a>
                <a href="@Url.Action("Delete", new {item.ID})" class="btn btn-danger">Delete</a>
                </td>
            </tr>

        }

</table>

